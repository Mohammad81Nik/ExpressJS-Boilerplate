generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Foo {
  id  Int    @id @default(autoincrement())
  foo String
}

model User {
  id         Int      @id @default(autoincrement())
  name       String
  email      String   @unique
  password   String?
  created_at DateTime @default(now())
}

model Otp {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  code        String
  created_at DateTime @default(now())
  expires_at DateTime
}
